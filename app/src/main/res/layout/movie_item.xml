<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMovieItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin"
    app:cardCornerRadius="@dimen/card_view_item_corner_radius"
    app:cardElevation="@dimen/card_view_item_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/contents_desc_thumbnail"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtMovieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/movie_item_title_padding"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtChannelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/movie_item_title_padding"
            android:paddingTop="@dimen/movie_item_desc_padding"
            android:paddingEnd="@dimen/movie_item_desc_padding"
            android:paddingBottom="@dimen/movie_item_desc_padding"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtPublishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/movie_item_padding"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>